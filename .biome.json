{
  "projectType": "workspace",
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/.git/**"
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": "error",
    "no-empty": "error",
    "eqeqeq": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-explicit-any": "error",
    "consistent-return": "error",
    "no-implicit-coercion": "error"
  }
}
