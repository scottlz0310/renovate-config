{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"ignore": [
			".vscode",
			"node_modules",
			"dist",
			"**/dist/**",
			"packages/cli/dist/**",
			"**/.git/**",
			"logs",
			".schema-cache",
			"**/.schema-cache/**"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
