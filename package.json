{
	"name": "@scottlz0310/renovate-config",
	"version": "1.0.0",
	"type": "module",
	"description": "Centralized Renovate configuration for multi-language projects",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/scottlz0310/renovate-config.git"
	},
	"keywords": [
		"renovate",
		"renovate-config",
		"shareable-config",
		"dependencies"
	],
	"author": "scottlz0310",
	"license": "MIT",
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"validate": "pnpm run validate:presets",
		"validate:presets": "node scripts/validate-presets.js",
		"test": "pnpm run validate",
		"test:cli": "pnpm run -w @scottlz0310/renovate-config-init test",
		"lint": "biome ci .",
		"format": "biome format --write .",
		"tsc:check": "pnpm --filter @scottlz0310/renovate-config-init run tsc:check",
		"knip": "knip --isolate-workspaces --no-config-hints",
		"check:ci": "pnpm run tsc:check && pnpm run lint && pnpm run knip && pnpm test && pnpm run test:cli",
		"prepare": "node scripts/install-lefthook.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"knip": "^5.75.2",
		"lefthook": "^2.0.12"
	}
}
