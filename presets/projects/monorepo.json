{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Monorepo preset for handling monorepo dependencies",
  "extends": [
    "group:monorepos",
    "group:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "@angular/"
      ],
      "groupName": "Angular monorepo"
    },
    {
      "matchPackagePrefixes": [
        "@nestjs/"
      ],
      "groupName": "NestJS monorepo"
    },
    {
      "matchPackagePrefixes": [
        "@vue/"
      ],
      "groupName": "Vue monorepo"
    },
    {
      "matchPackagePrefixes": [
        "@nuxt/"
      ],
      "groupName": "Nuxt monorepo"
    }
  ]
}
