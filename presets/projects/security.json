{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Security-focused preset for prioritizing security updates",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "priority"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0\\./",
      "automerge": false,
      "labels": [
        "security",
        "patch"
      ]
    },
    {
      "matchDatasources": ["npm", "pypi", "nuget", "go", "crate"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Security patches",
      "schedule": ["at any time"],
      "prPriority": 10
    }
  ],
  "osvVulnerabilityAlerts": true
}
