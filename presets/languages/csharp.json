{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "C# (.NET) project configuration for Renovate",
	"packageRules": [
		{
			"matchDatasources": ["nuget"],
			"groupName": "C# dependencies",
			"semanticCommitType": "chore",
			"semanticCommitScope": "deps-csharp"
		},
		{
			"matchDatasources": ["nuget"],
			"matchUpdateTypes": ["major"],
			"groupName": "C# major updates"
		},
		{
			"matchDatasources": ["nuget"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "C# minor and patch updates"
		},
		{
			"matchPackageNames": ["Microsoft.**"],
			"groupName": "Microsoft packages"
		},
		{
			"matchPackageNames": ["System.**"],
			"groupName": "System packages"
		},
		{
			"matchPackageNames": ["dotnet-sdk", "Microsoft.NET.Sdk"],
			"groupName": ".NET SDK"
		}
	]
}
