{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Docker project configuration for Renovate",
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker images",
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps-docker"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "Docker major updates"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker minor and patch updates"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "alpine",
        "debian",
        "ubuntu"
      ],
      "groupName": "Base OS images"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node",
        "python",
        "golang",
        "rust"
      ],
      "groupName": "Language runtime images"
    }
  ]
}
