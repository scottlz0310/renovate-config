{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Node.js project configuration for Renovate",
	"packageRules": [
		{
			"matchDatasources": ["npm"],
			"groupName": "Node.js dependencies",
			"semanticCommitType": "chore",
			"semanticCommitScope": "deps-node"
		},
		{
			"matchDatasources": ["npm"],
			"matchUpdateTypes": ["major"],
			"groupName": "Node.js major updates"
		},
		{
			"matchDatasources": ["npm"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "Node.js minor and patch updates"
		},
		{
			"matchDatasources": ["npm"],
			"matchDepTypes": ["devDependencies"],
			"groupName": "Node.js dev dependencies"
		},
		{
			"matchPackageNames": ["@types/**"],
			"groupName": "Type definitions"
		},
		{
			"matchDepTypes": ["packageManager"],
			"matchPackageNames": ["pnpm"],
			"enabled": false
		}
	],
	"lockFileMaintenance": {
		"enabled": true
	}
}
