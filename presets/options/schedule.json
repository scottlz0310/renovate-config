{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Schedule-based preset for controlled update timing",
	"schedule": ["before 3am on Monday"],
	"timezone": "Asia/Tokyo",
	"packageRules": [
		{
			"matchUpdateTypes": ["major"],
			"schedule": ["before 3am on Monday"],
			"groupName": "Major updates (weekly)"
		},
		{
			"matchUpdateTypes": ["minor"],
			"schedule": ["before 3am on Monday and Thursday"],
			"groupName": "Minor updates (twice weekly)"
		},
		{
			"matchUpdateTypes": ["patch"],
			"schedule": ["at any time"],
			"groupName": "Patch updates (anytime)"
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 3am on Monday"]
	}
}
