{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Production-safe preset for stable production environments",
	"separateMinorPatch": true,
	"separateMajorMinor": true,
	"minimumReleaseAge": "7 days",
	"prCreation": "not-pending",
	"packageRules": [
		{
			"matchUpdateTypes": ["major"],
			"dependencyDashboardApproval": true,
			"description": "Require manual approval for major updates in production"
		},
		{
			"matchUpdateTypes": ["minor"],
			"minimumReleaseAge": "14 days",
			"prCreation": "not-pending",
			"groupName": "Production minor updates"
		},
		{
			"matchUpdateTypes": ["patch"],
			"minimumReleaseAge": "7 days",
			"groupName": "Production patch updates"
		},
		{
			"matchDepTypes": ["devDependencies"],
			"minimumReleaseAge": "3 days"
		}
	]
}
