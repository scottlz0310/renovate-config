{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Security-focused preset for prioritizing security updates",
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security", "priority"],
		"schedule": ["at any time"],
		"automerge": true,
		"automergeType": "pr"
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["patch"],
			"matchCurrentVersion": "!/^0\\./",
			"labels": ["patch"],
			"prPriority": 5
		},
		{
			"matchDatasources": ["npm", "pypi", "nuget", "go", "crate"],
			"matchUpdateTypes": ["patch"],
			"groupName": "Security patches",
			"schedule": ["at any time"],
			"prPriority": 10
		}
	],
	"osvVulnerabilityAlerts": true
}
